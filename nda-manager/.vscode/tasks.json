{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ng-serve",
      "type": "shell",
      "command": "ng",
      "args": ["serve", "--source-map=true", "--watch"],
      "options": {
        "cwd": "${workspaceFolder}/nda-manager"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "applyTo": "closedDocuments",
        "fileLocation": [
          "relative",
          "${workspaceFolder}/nda-manager"
        ],
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": ".*Local:.*"
          },
          "endsPattern": {
            "regexp": ".*Compiled successfully.*|.*Failed to compile.*"
          }
        }
      }
    }
  ]
}