{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ng-serve",
      "type": "shell",
      "command": "ng",
      "args": ["serve", "--source-map=true", "--watch"],
      "options": {
        "cwd": "${workspaceFolder}/nda-manager"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "applyTo": "closedDocuments",
        "fileLocation": [
          "relative",
          "${workspaceFolder}/nda-manager"
        ],
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": ".*Local:.*"
          },
          "endsPattern": {
            "regexp": ".*Compiled successfully.*|.*Failed to compile.*"
          }
        }
      }
    },
    {
      "label": "rust: cargo build",
      "type": "shell",
      "command": "cargo",
      "args": ["build"],
      "options": {
        "cwd": "${workspaceFolder}/nda-backend"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "rust: cargo build --release",
      "type": "shell",
      "command": "cargo",
      "args": ["build", "--release"],
      "options": {
        "cwd": "${workspaceFolder}/nda-backend"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "rust: cargo test --no-run",
      "type": "shell",
      "command": "cargo",
      "args": ["test", "--no-run"],
      "options": {
        "cwd": "${workspaceFolder}/nda-backend"
      },
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "rust: cargo run",
      "type": "shell",
      "command": "cargo",
      "args": ["run"],
      "options": {
        "cwd": "${workspaceFolder}/nda-backend",
        "env": {
          "RUST_LOG": "debug",
          "DATABASE_URL": "sqlite:./stellar_mvp.db"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "isBackground": true,
      "problemMatcher": ["$rustc"]
    }
  ]
}